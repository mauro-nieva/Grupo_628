<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinternaActivity">

    <ImageView
        android:id="@+id/imgLinterna"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linterna_off"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"></ImageView>

    <ImageView
        android:id="@+id/imgInternet"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/internet_on" />

    <ImageView
        android:id="@+id/imgModo"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/manual" />

    <ImageView
        android:id="@+id/imgLog"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="208dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgInternet"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/log" />

    <TextView
        android:id="@+id/txtLuminosidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtProximidad"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtProximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>